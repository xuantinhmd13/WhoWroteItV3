<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myour.whowroteitv3">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".WhoWroteItApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WhoWroteIt">
        <activity
            android:name="com.myour.whowroteitv3.feature.showbook.view.ShowBookActivity"
            android:theme="@style/Theme.WhoWroteIt.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.myour.whowroteitv3.feature.addbook.view.AddBookActivity"
            android:parentActivityName="com.myour.whowroteitv3.feature.showbook.view.ShowBookActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.myour.whowroteitv3.feature.showbook.view.ShowBookActivity" />
        </activity>
    </application>

</manifest>